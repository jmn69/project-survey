{
  "name": "jm-survey",
  "version": "1.0.0",
  "description": "survey app for projets",
  "main": "server/index.js",
  "scripts": {
    "start-dev": "npm run clean && cross-env NODE_ENV=development babel-watch server/index.js",
    "start": "npm run build && npm run serve",
    "serve": "cross-env NODE_ENV=production node buildServer/index.js",
    "build": "npm run build:client && npm run build:server && npm run build:node",
    "build:client": "rimraf buildClient && cross-env NODE_ENV=production webpack --progress -p --config webpack/client.prod.js",
    "build:server": "rimraf buildServer && cross-env NODE_ENV=production webpack --progress -p --config webpack/server.prod.js",
    "build:node": "cross-env NODE_ENV=production babel server/index.js -o buildServer/index.js",
    "clean": "rimraf buildClient buildServer",
    "test": "jest && codecov",
    "heroku-postbuild": "npm run build"
  },
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "modulePaths": [
      "client"
    ],
    "moduleDirectories": [
      "node_modules",
      "client"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    }
  },
  "author": "jmi69",
  "license": "ISC",
  "devDependencies": {
    "autodll-webpack-plugin": "^0.2.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-jest": "=20.0.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-dynamic-import-node": "^1.0.2",
    "babel-plugin-module-resolver": "^2.7.1",
    "babel-plugin-transform-es2015-destructuring": "^6.23.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-universal-import": "^1.2.5",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-watch": "^2.0.7",
    "bcrypt-nodejs": "^0.0.3",
    "classnames": "^2.2.5",
    "codecov": "^2.2.0",
    "cross-env": "^5.0.4",
    "css-loader": "^0.28.4",
    "enzyme": "^2.8.2",
    "expect": "^1.20.2",
    "extract-css-chunks-webpack-plugin": "^2.0.16",
    "file-loader": "^0.11.2",
    "image-webpack-loader": "^3.3.1",
    "jest": "=20.0.3",
    "jquery": "^3.2.1",
    "moment": "^2.18.1",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-test-renderer": "^15.6.1",
    "redux-mock-store": "^1.2.3",
    "redux-thunk": "^2.2.0",
    "rimraf": "^2.6.1",
    "stats-webpack-plugin": "^0.6.1",
    "url-loader": "^0.5.9",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-hot-server-middleware": "^0.1.0",
    "write-file-webpack-plugin": "^4.1.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "body-parser": "^1.17.2",
    "bootstrap": "^4.0.0-beta",
    "connect-mongo": "^1.3.2",
    "cookie-parser": "^1.4.3",
    "express": "^4.15.3",
    "express-session": "^1.15.3",
    "fetch-everywhere": "^1.0.5",
    "history": "^4.6.3",
    "install": "^0.10.1",
    "mongoose": "^4.10.8",
    "morgan": "^1.8.2",
    "npm": "^5.3.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-redux": "^5.0.5",
    "react-universal-component": "^2.3.2",
    "reactstrap": "^4.8.0",
    "redux": "^3.7.2",
    "redux-devtools-extension": "^2.13.2",
    "redux-first-router": "^1.9.12",
    "redux-first-router-link": "^1.1.3",
